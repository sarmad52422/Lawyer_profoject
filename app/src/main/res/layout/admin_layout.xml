<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:id="@+id/clientsBTN"
        android:text="Clients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lawyers"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="Lawyers"
        android:layout_marginStart="10dip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clientsBTN"
        android:id="@+id/lawyers"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clientsBTN"
        android:id="@+id/usersList"/>

</androidx.constraintlayout.widget.ConstraintLayout>