<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/case_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Case Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/client_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client ID: "
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/case_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Case Details: "
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/case_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget: $0.00"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/case_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Not Accepted"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/accept_case_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:layout_marginEnd="8dp"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reject_case_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                app:cornerRadius="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>